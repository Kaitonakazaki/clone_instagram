<div class="row">
  <%= form_with(model: @user, local: true) do |f| %>

       <div class="col-md-6 col-md-offset-3">
          <h1>Sign up</h1>
          <form action="" method="post" class="form-horizontal">

            <div class="form-group">
              <label for="input_name" class="col-md-2 control-label">Nmae：</label>
              <div class="col-md-10">
                <%= f.text_field :name,class:"form-control", id:"login_name", placeholder:"Name" %><br/>
              </div>
            </div>

            <div class="form-group">
              <label for="input_password" class="col-md-2 control-label">Email：</label>
              <div class="col-md-10">
                <%= f.email_field :email,class:"form-control", id:"input_password", placeholder:"Email" %><br />
              </div>
            </div>

            <div class="form-group">
              <label for="input_password" class="col-md-2 control-label">Password：</label>
              <div class="col-md-10">
                <%= f.password_field :password,class:"form-control", id:"input_password", placeholder:"Password"  %><br />              </div>
            </div>

            <div class="form-group">
              <label for="input_password" class="col-md-2 control-label">Password Confirmatiom：</label>
              <div class="col-md-10">
                <%= f.password_field :password_confirmation,class:"form-control", id:"input_password", placeholder:"Password Confirmation" %><br />
              </div>
            </div>

            <div class="sign_content"><%= f.label :icon %></div>
            <div><%= f.file_field :icon, style: "margin-left: 46%" %></div>
            <%#= f.hidden_field :user_cache, id: :sign_content,style: "color:white" %>

            <div class="form-group">
              <div class="col-md-offset-2 col-md-10">
                <%= f.submit "Create my account",class:"btn btn-primary btn-block" %>
              </div>
            </div>
         </form>
      </div>
    </div>
<% end %>
