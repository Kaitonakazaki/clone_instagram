<div class="confirm_body">
  <h1 class="confirm_title">Blog details</h1>
    <div>

    <div class="box3">
      <p class="confirm_content">タイトル: <%= @instagram.title %></p>
      <p class="confirm_content">内容: <%= @instagram.content %></p>
    </div>
     <p class="detail_image">
        <%= image_tag @instagram.image %>
      </p>




      <% unless @instagram.user_id == current_user.id %>
        <% if @favorite.present? %>
          <%= link_to 'お気に入り解除する', favorite_path(id: @favorite.id), method: :delete, class: 'btn btn-danger' %>
        <% else %>
          <%= link_to 'お気に入りする', favorites_path(instagram_id: @instagram.id), method: :post, class: 'btn btn-primary' %>
        <% end %>
      <% end %>
</div>
