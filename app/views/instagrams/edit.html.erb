<%= form_with(model: @instagram, local: true) do |form| %>
<% if @instagram.errors.any? %>
    <div id="error_explanation">
      <h2><%= @instagram.errors.count %>件のエラーがあります。</h2>
      <ul>

      <% @instagram.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="insta_title">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>
  <div class="insta_title">
    <%= form.label :content %>
    <%= form.text_field :content %>
  </div>
  <%= form.submit %>
<% end %>
