<div class="row">
  <%= form_with(scope: :session, url: sessions_path, local: true) do |f| %>

       <div class="col-md-6 col-md-offset-3">
          <h1>login</h1>
          <form action="" method="post" class="form-horizontal">

            <div class="form-group">
              <label for="input_name" class="col-md-2 control-label">Address：</label>
              <div class="col-md-10">
                <%= f.email_field :email,class:"form-control", id:"login_name", placeholder:"Address" %><br />
              </div>
            </div>

            <div class="form-group">
              <label for="input_password" class="col-md-2 control-label">Password：</label>
              <div class="col-md-10">
                <%= f.password_field :password,class:"form-control", id:"input_password", placeholder:"Password" %><br />
              </div>
            </div>

            <div class="form-group">
              <div class="col-md-offset-2 col-md-10">
                <%= f.submit "Log in",class:"btn btn-primary btn-block" %>
              </div>
            </div>
         </form>
      </div>
    </div>
<% end %>
